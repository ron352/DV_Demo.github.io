<!DOCTYPE html>
<html>
<head>

<title>Muted Video</title>

<!-- Disable right click -->  
<script>
document.addEventListener("contextmenu", e => e.preventDefault()); 
</script>

<!-- Hide source code -->
<script>
document.onkeydown = e => {
  if(e.ctrlKey && 
    (e.keyCode === 67 || 
     e.keyCode === 86 ||   
     e.keyCode === 85 || 
     e.keyCode === 117)) {
    alert('not allowed');
    return false;
  } else {
    return true;
  }
};  
</script>

</head>

<body>

